@model List<SBD_TO_Project.Models.Schedule>
<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Schedule List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-route-id="@Model.First().IdCinema" asp-action="Create" class=" btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add Schedule
            </a>
            <a asp-controller="Cinema" asp-action="Index" class=" btn btn-info">
                <i class="fas fa-arrow-alt-circle-left"></i>&nbsp; Back
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.First().Id != 0)
    {
        <table class=" table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Schedule Date
                    </th>
                    <th>
                        Schedule Entries
                    </th>
                    <th>
                        Modify Schedule
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Date.ToShortDateString()
                        </td>                     
                        <td>
                            @if (obj.ScheduleEntries.Count > 0)
                            {
                                <a asp-route-Id="@obj.Id" asp-controller="ScheduleEntry" asp-action="Index" class="btn btn-info w-100">Browse</a>
                            }
                            else
                            {
                                <a asp-route-Id="@obj.Id" asp-controller="ScheduleEntry" asp-action="Create" class="btn btn-success w-100">
                                    <i class="fas fa-plus"></i> &nbsp; Add
                                </a>
                            }
                        </td>
                        <td class="d-flex justify-content-center">
                            <a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-warning m-0 mr-4" style="width:40%">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger m-0 text-white" style="width:40%">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No schedule exists.</p>
    }
</div>