@model SBD_TO_Project.Models.Cinema

<div class="col-lg-6 col-md-6 pb-4 filter @Model.Town">
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-6">
                <div class="row text-info h3 pl-2 h-25"> @Model.Name </div>
                <div class="row text-info h4 pl-2">@Model.Town</div>
                <div class="row text-body h5 pl-2"> @(Model.Street +" "+Model.ApartmentNumber)</div>
                <div class="row text-body h6 pl-2"> @Model.PostalCode </div>
                <div class="row text-body h6 pl-2"> @Model.Country </div>
            </div>
        </div>
        <div class="card-body p-1 px-3 row">
            <div class="col-12 p-1">
                <a class="btn btn-primary form-control btn-sm p-2" style="height:40px">Check Cinema Schedules</a>
            </div>
        </div>
    </div>
</div>