<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SBD_TO_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_flatty.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/fontawesome/css/all.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SBD_TO_Project</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarColor01">
                    
                    <partial name="_LoginPartial"/>
                    
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated && (User.IsInRole(WebConstants.ManagerRole) || User.IsInRole(WebConstants.AdminRole)))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Manage
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="nav-link font-weight-bold text-dark" asp-area="" asp-controller="Cinema" asp-action="Index">Cinemas</a>
                                    <a class="nav-link font-weight-bold text-dark" asp-area="" asp-controller="Movie" asp-action="Index">Movies</a>
                                    @if (User.IsInRole(WebConstants.ManagerRole) || User.IsInRole(WebConstants.AdminRole))
                                    {
                                        <a class="nav-link font-weight-bold text-dark" asp-area="" asp-controller="Employee" asp-action="Index">Employees</a>
                                    }
                                    @if (User.IsInRole(WebConstants.AdminRole))
                                    {
                                        <a class="nav-link font-weight-bold text-dark" asp-area="" asp-controller="Employee" asp-action="ManagerIndex">Managers</a>
                                    }
                                    <a class="nav-link font-weight-bold text-dark" asp-area="" asp-controller="Comment" asp-action="Index">Comments</a>
                                    <a class="nav-link font-weight-bold text-dark" asp-area="" asp-controller="Reservation" asp-action="Index">Reservations</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Genre" asp-action="Index">Genres</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Actor" asp-action="Index">Actors</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Director" asp-action="Index">Directors</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="MovieStudio" asp-action="Index">Movie Studios</a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole(WebConstants.EmployeeRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Comment" asp-action="Index">Comments</a>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="" asp-controller="Reservation" asp-action="Index">Reservations</a>
                            </li>                           
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="MovieBrowse" asp-action="Index">Browse Movies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="CinemaBrowse" asp-action="Index">Browse Cinemas</a>
                        </li>
                        @if (User.IsInRole(WebConstants.CustomerRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Reservation" asp-action="Index">My Reservations</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - SBD_TO_Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
