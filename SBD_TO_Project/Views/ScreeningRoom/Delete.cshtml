@model SBD_TO_Project.Models.ScreeningRoom

<form method="post" asp-action="DeleteConfirm">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-dark pl-3">
                Delete Screening Room
            </h2>
        </div>
        <div class="form-group row">
            <h4 class="text-danger pl-3">
                Are you sure you want to delete the following screening room?
            </h4>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ScreeningRoomNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ScreeningRoomNumber" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="NumberOfRows"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NumberOfRows" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="NumberOfSeatsPerRow"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NumberOfSeatsPerRow" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-route-id="@Model.IdCinema" asp-action="Index" class="btn btn-primary w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>