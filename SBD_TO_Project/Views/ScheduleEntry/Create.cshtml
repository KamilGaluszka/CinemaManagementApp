@model SBD_TO_Project.Models.ViewModels.ScheduleEntryVM

<form method="post" asp-action="Create">
    <input asp-for="ScheduleEntry.IdSchedule" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-dark pl-3">
                Add New Schedule Entry
            </h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ScheduleEntry.StartTime"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ScheduleEntry.StartTime" class="form-control" />
                        <span asp-validation-for="ScheduleEntry.StartTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ScheduleEntry.IdMovie"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="ScheduleEntry.IdMovie" asp-items="@Model.Movies" class="form-control" id="selectM">
                            <option disabled selected>--Select Movie--</option>
                        </select>
                        <span asp-validation-for="ScheduleEntry.IdMovie" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ScheduleEntry.IdScreeningRoom"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="ScheduleEntry.IdScreeningRoom" asp-items="@Model.ScreeningRooms" class="form-control" id="selectSR">
                            <option disabled selected>--Select Screening Room--</option>
                        </select>
                        <span asp-validation-for="ScheduleEntry.IdScreeningRoom" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ScheduleEntry.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ScheduleEntry.Price" class="form-control" />
                        <span asp-validation-for="ScheduleEntry.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" onclick="return validateInput()" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-route-id="@Model.ScheduleEntry.IdSchedule" asp-action="Index" class="btn btn-primary w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script>       
        function validateInput() {
            if (document.getElementById("selectM").value == "--Select Movie--") {
                Swal.fire(
                    'Error!',
                    'Please select a movie',
                    'error'
                )
                return false;
            }
            if (document.getElementById("selectSR").value == "--Select Screening Room--") {
                Swal.fire(
                    'Error!',
                    'Please select a screening room',
                    'error'
                )
                return false;
            }            
            return true;
        }
    </script>
}