@model List<SBD_TO_Project.Models.CinemaEmployee>

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Manager List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-route-id="@Model.First().Cinema.Id" asp-action="ManagerAssign" class=" btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp; Assign Manager to <span class="font-weight-bold">@Model.First().Cinema.Name</span>
            </a>
            <a asp-controller="Cinema" asp-action="Index" class=" btn btn-info">
                <i class="fas fa-arrow-alt-circle-left"></i>&nbsp; Back
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.First().Id != 0)
    {
        <table class=" table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone no.
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Monthly Salary
                    </th>
                    <th>
                        Remove
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @(obj.Employee.FirstName+" "+obj.Employee.LastName)
                        </td>
                        <td>
                            @obj.Employee.Email
                        </td>
                        <td>
                            @if (obj.Employee.PhoneNumber != null)
                            {
                                @obj.Employee.PhoneNumber
                            }
                            else
                            {
                                <span>None</span>
                            }
                        </td>
                        <td>
                            @obj.Employee.Position
                        </td>
                        <td>
                            @obj.Employee.MonthlySalary
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger m-0 text-white" style="width:40%">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No manager is assigned to @Model.First().Cinema.Name</p>
    }
</div>