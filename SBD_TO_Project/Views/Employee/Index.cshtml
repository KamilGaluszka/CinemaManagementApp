@model IEnumerable<SBD_TO_Project.Models.Employee>

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-area="Identity" asp-page="/Account/RegisterEmployee" class=" btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp; Create Employee Account
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class=" table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Phone No.
                    </th>
                    <th>
                        Position
                    </th>
                    <th>
                        Monthly Salary
                    </th>
                    <th>
                        Start Date Of Work
                    </th>
                    <th>
                        Manage Employee
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td>
                        @(obj.FirstName+" "+obj.LastName)
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @if (obj.PhoneNumber == null)
                        {
                            <span>None</span>
                        }
                        else
                        {
                            @obj.PhoneNumber
                        }
                    </td>
                    <td>
                        @obj.Position
                    </td>
                    <td>
                        @obj.MonthlySalary
                    </td>
                    <td>
                        @obj.StartDate.ToShortDateString()
                    </td>
                    <td class="text-center">
                        <div class="w-auto btn-group" role="group">
                            <a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-warning m-0 mr-4">
                                <i class="fas fa-edit"></i>&nbsp;
                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger m-0 text-white">
                                <i class="fas fa-trash-alt"></i>&nbsp;
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No genre exists.</p>
    }
</div>