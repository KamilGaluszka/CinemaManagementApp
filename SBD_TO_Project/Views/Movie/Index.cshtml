@model IEnumerable<SBD_TO_Project.Models.Movie>

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Movie List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class=" btn btn-primary">
                + Add New Movie
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class=" table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Movie Title
                    </th>
                    <th>
                        Movie Description
                    </th>
                    <th>
                        Age Rating
                    </th>
                    <th>
                        Modify Movie
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td>
                        @obj.Title
                    </td>
                    <td>
                        @obj.Description
                    </td>
                    <td>
                        @obj.AgeRating
                    </td>
                    <td class="d-flex justify-content-center">
                        <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-warning m-0 mr-4" style="width:40%">Edit</a>
                        <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger m-0 text-white" style="width:40%">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No movie exists.</p>
    }
</div>

