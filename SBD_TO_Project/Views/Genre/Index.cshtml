@model IEnumerable<SBD_TO_Project.Models.Genre> 

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Genre List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class=" btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp; Add Genre
            </a>            
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
    {
        <table class=" table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Genre Name
                    </th>
                    <th>
                        Modify Genre
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Name
                        </td>
                        <td class="d-flex justify-content-center">
                            <a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-warning m-0 mr-4" style="width:40%">
                                <i class="fas fa-edit"></i>&nbsp; Edit
                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger m-0 text-white" style="width:40%">
                                <i class="fas fa-trash-alt"></i>&nbsp; Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No genre exists.</p>
    }
</div>

